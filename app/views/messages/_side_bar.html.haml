.chat-side 
  .chat-side__side-header
    .chat-side__side-header__box
      .chat-side__side-header__box__user-name
        = current_user.name
      .chat-side__side-header__box__menu
        = link_to new_group_path,class:"chat-side__side-header__box__menu__pen(current_user)" do
          = icon('fa','edit')
        = link_to "#",class:"chat-side__side-header__box__menu__sharin(current_user)" do
          = icon('fa','cog')
  .chat-side__groups
    - current_user.groups.each do |group|
      .chat-side__groups__group
        = link_to group_messages_path(group) do
          .chat-side__groups__group__name
            = group.name
          .chat-side__groups__group__latest-message
            = group.show_last_message