.chat-main__messages__message{data: {message: {id: message.id}}}
  .chat-main__messages__message__info
    .chat-main__messages__message__info__talker
      = message.user.name
    .chat-main__messages__message__info__talker__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__messages__message__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
  
  
  
  
  
  
  
  
  
  
  
  
